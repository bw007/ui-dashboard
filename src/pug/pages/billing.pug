extends ../layouts/dashboard.pug

block content
  main.main
    include ../parts/_header.pug
    .main__scrollbar
      section.billing
        .billing__container
          .billing__c-card.c-card
            .c-card__header
              h3.c-card__name Purity UI
              img.c-card__logo(src="./imgs/ms-card-circle.svg" alt="")
            h1.c-card__number 7812 2139 0823 XXXX
            .c-card__info
              .c-card__expiration
